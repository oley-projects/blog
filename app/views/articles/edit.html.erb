<h3><%= t('articles.edit article') %></h3>

<%= form_for :article , url: article_path(@article), method: :put do |f| %>

	<div>
		<%= f.label :title %> <br />
		<%= f.text_field :title %>
	</div>

	<br />

	<div>
		<%= f.label :text %> <br />
		<%= f.text_area :text %>
	</div>	

	<br />

	<div>
		<%= f.submit %> <br />
	</div>	

<% end %>