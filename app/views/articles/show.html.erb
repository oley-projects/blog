<h3><%= @article.title %></h3>
<p><%= @article.text %></p>

<br />  <br /> 
<h3>Comments</h3>

<% @article.comments.each do |comment| %>
	<h4><%= comment.author %></h4>
	<p style="font-size: 15px"><%= comment.body %></p>
	<p style="font-size: 13px; color: gray">Created: <%= comment.created_at %></p>
	<hr /><br /> <br />
<% end %>

<%= form_for([@article, @article.comments.build]) do |f| %>

	<div>
		<%= f.label :author %> <br />
		<%= f.text_field :author %>
	</div>

	<br />

	<div>
		<%= f.label :body %> <br />
		<%= f.text_area :body %>
	</div>	

	<br />

	<div>
		<%= f.submit %> <br />
	</div>	

<% end %>